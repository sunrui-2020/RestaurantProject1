            <div>
                <label class="control-label">Email</label>
                <input type="text" asp-for="Staffs.StaffEmail" class="form-control" />
            </div>
            <br />
            <div>
                <label class="control-label">job type</label>
                <input type="text" asp-for="Staffs.Stafftype" class="form-control" />
            </div>
            <br />
            <div>
                <label class="control-label">Nationality</label>
                <input type="text" asp-for="Staffs.Staffnationality" class="form-control" />
