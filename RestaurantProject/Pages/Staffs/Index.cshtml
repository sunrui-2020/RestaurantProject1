    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label class="control-label">Staff ID</label>
                <input type="text" asp-for="Staffs.StaffID" class="form-control" />
            </div>
            <br />
            <div>
                <label class="control-label">First name</label>
                <input type="text" asp-for="Staffs.StaffFname" class="form-control" />
            </div>
            <br />
            <div>
                <label class="control-label">Last name</label>
                <input type="text" asp-for="Staffs.StaffLname" class="form-control" />
