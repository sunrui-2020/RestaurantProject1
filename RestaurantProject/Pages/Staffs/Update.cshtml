@page
@model RestaurantProject.Pages.Staffs.UpdateModel
@{
}
<h1>:: Update customer Page</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">

            <input type="hidden" asp-for="Staffs.Id" />


            <div class="form-group">
                <label asp-for="Staffs.StaffID" class="control-label"></label>
                <input type="text" asp-for="Staffs.StaffID" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Staffs.StaffFname" class="control-label"></label>
                <input type="text" asp-for="Staffs.StaffFname" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Staffs.StaffLname" class="control-label"></label>
                <input type="text" asp-for="Staffs.StaffLname" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Staffs.StaffSex" class="control-label"></label>
                <input type="text" asp-for="Staffs.StaffSex" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Staffs.StaffEmail" class="control-label"></label>
                <input type="text" asp-for="Staffs.StaffEmail" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Staffs.Stafftype" class="control-label"></label>
                <input type="text" asp-for="Staffs.Stafftype" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Staffs.Staffnationality" class="control-label"></label>
                <input type="text" asp-for="Staffs.Staffpassword" class="form-control" />
            </div>



            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-dark" />
            </div>

        </form>
    </div>
</div>